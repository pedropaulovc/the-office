#!/bin/bash

# Block commits to reserved branch names (the-office-a, the-office-b, the-office-c, the-office-d, the-office-e, the-office-f, the-office-g)
# These are used for testing/experimentation and should not receive direct commits

branch_name=$(git symbolic-ref --short HEAD 2>/dev/null)

case "$branch_name" in
    the-office-a|the-office-b|the-office-c|the-office-d|the-office-e|the-office-f|the-office-g)
        echo "ERROR: Direct commits to branch '$branch_name' are not allowed."
        echo ""
        echo "Create a feature branch instead:"
        echo "  git checkout -b feature/your-feature-name"
        echo ""
        exit 1
        ;;
esac

exit 0
