{
  "name": "the-office-slack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --fix --quiet --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest --reporter=dot",
    "test:watch": "vitest --watch --reporter=dot",
    "test:coverage": "vitest --coverage",
    "test:e2e": "next build && playwright test",
    "test:all": "npm run lint && npm run typecheck && npm run test:coverage && npm run test:e2e",
    "db:push": "npx drizzle-kit push",
    "db:seed": "npx tsx src/db/seed.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:nuke": "npx tsx scripts/nuke-db.ts && npx drizzle-kit push && npx tsx src/db/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/nextjs-api-reference": "^0.9.18",
    "@sentry/nextjs": "^10.38.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@playwright/test": "npm:@pedropaulovc/playwright-test@1.59.0-next.8",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "jsdom": "^28.0.0",
    "playwright": "npm:@pedropaulovc/playwright@1.59.0-next.8",
    "playwright-core": "npm:@pedropaulovc/playwright-core@1.59.0-next.8",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.55.0",
    "vercel": "^50.15.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "@playwright/test": "npm:@pedropaulovc/playwright-test@1.59.0-next.8",
    "playwright": "npm:@pedropaulovc/playwright@1.59.0-next.8",
    "playwright-core": "npm:@pedropaulovc/playwright-core@1.59.0-next.8",
    "@pedropaulovc/playwright": "npm:@pedropaulovc/playwright@1.59.0-next.8",
    "@pedropaulovc/playwright-core": "npm:@pedropaulovc/playwright-core@1.59.0-next.8"
  }
}
